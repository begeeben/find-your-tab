{
  "manifest_version": 2,
  "name": "Find Your Tab",
  "description": "A browser add-on to help you find a tab easier",
  "version": "1.2",
  "homepage_url": "https://github.com/begeeben/find-your-tab",
  "permissions": [
    "tabs"
  ],
  "background": {
      "scripts": ["background/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Find Your Tab",
    "default_popup": "popup/tabs.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png"
    }
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "96": "icon/icon96.png",
    "128": "icon/icon128.png"
  }
}
